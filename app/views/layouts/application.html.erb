<!DOCTYPE html>
<html>
  <head>
    <title>Cia do Nó de Teatro</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
              <%= link_to "Cia do Nó", root_path, class:"navbar-brand"%>
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                  <li class="nav-item active"><%= link_to "Administrativo", root_path, class:"nav-link" %></li>
                  <li class="nav-item active"><%= link_to "Artístico", espetaculos_path, class:"nav-link" %></li>
                  <li class="nav-item active"><%= link_to "Pedagógico", turmas_path, class:"nav-link" %></li>
                  <li class="nav-item active"><%= link_to "Difusão", root_path, class:"nav-link" %></li>
                    <li class="nav-item active"><%= link_to "Livro Caixa", registros_path, class:"nav-link" %></li>
                </ul>
              </div>
              <ul class="navbar-nav justify-content-end">
                  <% if user_signed_in? %>
                    <%= link_to "Editar",  edit_user_registration_path, class: "btn btn-info" %>&nbsp;
                    <%= link_to "Sair", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
                  <% else %>
                      <%= link_to "Entrar",  new_user_session_path, class: "btn btn-success" %>&nbsp;
                      <%= link_to "Cadastar",  new_user_registration_path, class: "btn btn-primary" %>
                  <% end %>
                  
              </ul>    
          </div>
        </nav>
      
      <% flash.each do |name, message| %>
        <%= content_tag(:div, message, class:"btn btn-info #{name}") %>
      <% end %>
      
    <div class="container"> 
        <%= yield %>
    </div> 
  </body>
</html>
